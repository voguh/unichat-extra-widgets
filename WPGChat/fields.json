{
    "$schema": "https://raw.githubusercontent.com/voguh/unichat/refs/heads/feature/widget-editor/widgets/fields-schema.json",
    "displayMode": {
        "type": "dropdown",
        "label": "Modo de exibição",
        "value": "mixed",
        "options": {
            "left": "Esquerda",
            "mixed": "Alternado",
            "right": "Direita"
        }
    },
    "messageAnimation": {
        "type": "dropdown",
        "label": "Animação de entrada",
        "value": "fadeIn 250ms ease-in",
        "options": {
            "none": "None",
            "fadeIn 250ms ease-in": "Fade In",
            "slideInLeft 250ms ease-in": "Slide In Left",
            "slideInRight 250ms ease-in": "Slide In Right",
            "bounceIn 250ms ease-in": "Bounce In",
            "zoomIn 250ms ease-in": "Zoom In"
        }
    },
    "accentColor": {
        "type": "colorpicker",
        "label": "Cor de destaque",
        "value": "#fcc419"
    },



