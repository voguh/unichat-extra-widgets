{
    "$schema": "https://cdn.statically.io/gh/voguh/unichat/1.3.0/widgets/fields-schema.json",
    "messageAnimation": {
        "type": "dropdown",
        "label": "Animação de entrada",
        "value": "fadeIn 250ms ease-in",
        "options": {
            "none": "None",
            "fadeIn 250ms ease-in": "Fade In",
            "slideInLeft 250ms ease-in": "Slide In Left",
            "slideInRight 250ms ease-in": "Slide In Right",
            "bounceIn 250ms ease-in": "Bounce In",
            "zoomIn 250ms ease-in": "Zoom In"
        }
    },
    "accentColor": {
        "type": "colorpicker",
        "label": "Cor de destaque",
        "value": "#0000FF"
    },



    "emoteSize": {
        "type": "number",
        "group": "Mensagem",
        "label": "Tamanho do Emote",
        "value": 28
    },

    "defaultBackgroundColor": {
        "type": "colorpicker",
        "group": "Mensagem",
        "label": "Cor de fundo",
        "value": "#c0c0c0"
    },
    "defaultTextColor": {
        "type": "colorpicker",
        "group": "Mensagem",
        "label": "Cor do texto",
        "value": "#000000"
    },



    "badgeSize": {
        "type": "number",
        "group": "Decorador da janela",
        "label": "Tamanho da Badge",
        "value": 18
    },

    "headerBackgroundColor": {
        "type": "colorpicker",
        "group": "Decorador da janela",
        "label": "Cor de fundo",
        "value": "#808080"
    },
    "headerTextColor": {
        "type": "colorpicker",
        "group": "Decorador da janela",
        "label": "Cor do texto",
        "value": "#FFFFFF"
    },



    "donateMessageText": {
        "type": "textarea",
        "group": "Evento de Donate",
        "label": "Message template",
        "value": "Mandou <span>{value} {currency}</span>!"
    },
    "donateBackgroundColor": {
        "type": "colorpicker",
        "group": "Evento de Donate",
        "label": "Cor de fundo",
        "description": "Cor utilizada no decorador da janela",
        "value": "#808000"
    },
    "donateTextColor": {
        "type": "colorpicker",
        "group": "Evento de Donate",
        "label": "Cor do texto",
        "description": "Cor utilizada no decorador da janela",
        "value": "#FFFFFF"
    },



    "sponsorMessageText": {
        "type": "textarea",
        "group": "Evento de Sponsor",
        "label": "Message template",
        "value": "Se tornou assinante por <span>{months}</span> meses!"
    },
    "sponsorBackgroundColor": {
        "type": "colorpicker",
        "group": "Evento de Sponsor",
        "label": "Cor de fundo",
        "description": "Cor utilizada no decorador da janela",
        "value": "#000080"
    },
    "sponsorTextColor": {
        "type": "colorpicker",
        "group": "Evento de Sponsor",
        "label": "Cor do texto",
        "description": "Cor utilizada no decorador da janela",
        "value": "#FFFFFF"
    },



    "sponsorGiftMessageText": {
        "type": "textarea",
        "group": "Evento de Sponsor Gift",
        "label": "Message template",
        "value": "Mandou <span>{count} assinaturas</span> de presente!"
    },
    "sponsorGiftBackgroundColor": {
        "type": "colorpicker",
        "group": "Evento de Sponsor Gift",
        "label": "Cor de fundo",
        "description": "Cor utilizada no decorador da janela",
        "value": "#000080"
    },
    "sponsorGiftTextColor": {
        "type": "colorpicker",
        "group": "Evento de Sponsor Gift",
        "label": "Cor do texto",
        "description": "Cor utilizada no decorador da janela",
        "value": "#FFFFFF"
    },



    "raidMessageText": {
        "type": "textarea",
        "group": "Evento de Raid",
        "label": "Message template",
        "value": "<span>{author_display_name}</span> acabou de chegar com {viewer_count} espectadores!"
    },
    "raidViewerCountDefault": {
        "type": "text",
        "group": "Evento de Raid",
        "label": "Viewer count placeholder",
        "description": "Valor usado quando o contador de espectadores não está disponível.",
        "value": "seus"
    },
    "raidBackgroundColor": {
        "type": "colorpicker",
        "group": "Evento de Raid",
        "label": "Cor de fundo",
        "description": "Cor utilizada no decorador da janela",
        "value": "#000080"
    },
    "raidTextColor": {
        "type": "colorpicker",
        "group": "Evento de Raid",
        "label": "Cor do texto",
        "description": "Cor utilizada no decorador da janela",
        "value": "#FFFFFF"
    }
}
